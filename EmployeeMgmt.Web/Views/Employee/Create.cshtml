@model EmployeeMgmt.Domain.Entities.Employee
@{
  ViewData["Title"] = "New Employee";
}

<div class="w-full h-full flex flex-col ">
  <div class="flex flex-col gap-2 px-6 py-10 border-b">
    <h1 class="text-3xl font-serif font-medium">New Employee</h1>
    <p class="font-normal text-md text-neutral-400 font-sans tracking-tight px-1 text-balance">
      Please fill in the following form carefully to register a new employee.
    </p>
  </div>

  <form asp-action="Create" method="POST" class="mt-6 px-6 flex flex-col gap-2">
    <!-- Employee Name -->
    <input asp-for="Name"
      class="w-full border text-base text-black px-4 py-2 placeholder:font-light focus:outline-black transition-all ease-linear duration-300"
      placeholder="Employee Name" required />
    <span asp-validation-for="Name" class="text-red-500"></span>

    <!-- Employee Email -->
    <input asp-for="Email"
      class="w-full border text-base text-black px-4 py-2 placeholder:font-light focus:outline-black transition-all ease-linear duration-300"
      placeholder="Employee Email" type="email" required />
    <span asp-validation-for="Email" class="text-red-500"></span>

    <!-- Hire Date -->
    <input asp-for="HireDate"
      class="w-full border text-base text-black px-4 py-2 placeholder:font-light focus:outline-black transition-all ease-linear duration-300"
      placeholder="Hire Date" type="date" required />
    <span asp-validation-for="HireDate" class="text-red-500"></span>

    <!-- Department Dropdown -->
    <select asp-for="DepartmentId" asp-items="ViewBag.Departments"
      class="w-full border text-base text-black px-4 py-2 focus:outline-black transition-all ease-linear duration-300">
    </select>
    <span asp-validation-for="DepartmentId" class="text-red-500"></span>

    <!-- Submit Button -->
    <div class="flex">
      <button type="submit" class="px-4 py-2 bg-black w-full text-white font-medium hover:bg-black/90 shadow-sm">
        Register Employee
      </button>
    </div>
  </form>


  @if (!ViewData.ModelState.IsValid)
  {
    <div class="text-red-500">
      <ul>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
          <li>@error.ErrorMessage</li>
        }
      </ul>
    </div>
  }

</div>